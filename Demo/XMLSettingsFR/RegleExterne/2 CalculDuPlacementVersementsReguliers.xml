MontantDeVersement : Num8
Taux : Num8
NombreDeVersement : Int4


procedure WFCalculate(inOut Result : Num8)
   var C1 : Num8
   var C2 : Num8
   
   C1 = self.Puissance(Num8(1) + self.Taux, self.NombreDeVersement + 1)
   C2 = (C1 - 1) / self.Taux - 1
   Result = C2 * self.MontantDeVersement
endProc 

